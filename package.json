{
  "name": "narracom",
  "version": "1.0.0",
  "private": true,
  "description": "Electron + React + Tailwind + shadcn/ui desktop app for UPC lookup, prompts, and LM Studio integration.",
  "main": "main/main.js",
  "scripts": {
    "start": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config renderer/vite.config.js",
    "dev:electron": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer",
    "build:renderer": "vite build --config renderer/vite.config.js",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "classnames": "^2.5.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.1"
  },
  "build": {
    "appId": "com.example.narracom",
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "cache/**/*",
      "responses/**/*",
      "prompts/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "prompts",
        "to": "prompts",
        "filter": ["**/*"]
      }
    ]
  }
}
